{
  "version": 2,
  "buildCommand": "npm install",
  "env": {
    "NODE_ENV": "production"
  },
  "functions": {
    "api/index.js": {
      "memory": 1024,
      "maxDuration": 30
    }
  },
  "rewrites": [
    { "source": "/auth/(.*)", "destination": "/api/index" },
    { "source": "/users/(.*)", "destination": "/api/index" },
    { "source": "/getJotFormData/(.*)", "destination": "/api/index" },
    { "source": "/(calendar|home|nths|hosa|ffa|pba|skills|vei|event-details).html", "destination": "/api/index" },
    { "source": "/(.*)", "destination": "/api/index" }
  ]
}
